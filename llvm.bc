declare i32 @printf(i8*, ...)

@.str = private unnamed_addr constant [3 x i8] c"%i\00", align 1

define i32 @main() {
    start:
          %a = alloca i32, align 4
          %0 = load i32, i32* %a
          %1 = add i32 %0, 1
          store i32 %1, i32* %a

          call i32 (i8*, ...) @printf(i8* getelementptr inbounds([3 x i8], [3 x i8]* @.str, i64 0, i64 0), i32 %1)

    ; we exit with code 0 = success
          ret i32 0
}